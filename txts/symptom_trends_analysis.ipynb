# %% [markdown]
# # ðŸ§  Symptom Search Correlation: Monkeypox & Measles
# This notebook compares Google search activity for symptom terms in outbreak vs control regions
# during the 4 weeks preceding outbreak recognition.

# %%
# --- Setup ---
!pip install pytrends pandas numpy matplotlib seaborn --quiet

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from pytrends.request import TrendReq
from datetime import datetime, timedelta

# %%
# --- Configuration ---
recognition_dates = {
    "monkeypox": "2025-08-01",
    "measles": "2025-07-15"
}

OUTBREAK_STATES = {
    "monkeypox": ["California", "New York", "Florida", "Texas"],
    "measles": ["California", "New York"]
}

CONTROL_STATES = ["Oregon", "Minnesota", "Kansas", "Vermont"]

SYMPTOMS = ["rash", "fever", "pain"]
DISEASE_SPECIFIC = {
    "monkeypox": ["monkeypox rash", "mpox rash"],
    "measles": ["measles rash"]
}

# %%
pytrends = TrendReq(hl='en-US', tz=0)

def fetch_interest_over_time(keyword, start_date, end_date):
    timeframe = f"{start_date.strftime('%Y-%m-%d')} {end_date.strftime('%Y-%m-%d')}"
    pytrends.build_payload([keyword], timeframe=timeframe, geo="US")
    df = pytrends.interest_by_region(resolution='region', inc_low_vol=True)
    df = df.reset_index().rename(columns={"geoName": "state", keyword: "value"})
    df["keyword"] = keyword
    return df

# %%
def analyze_disease(disease):
    rec_date = datetime.fromisoformat(recognition_dates[disease])
    start_date = rec_date - timedelta(days=28)
    end_date = rec_date
    timeframe = f"{start_date.date()} to {end_date.date()}"
    print(f"\nðŸ“… {disease.title()} | Timeframe: {timeframe}")

    outbreak = OUTBREAK_STATES[disease]
    control = CONTROL_STATES
    all_regions = outbreak + control

    # Collect trends
    dfs = []
    for kw in SYMPTOMS + DISEASE_SPECIFIC.get(disease, []):
        try:
            df_kw = fetch_interest_over_time(kw, start_date, end_date)
            dfs.append(df_kw)
        except Exception as e:
            print(f"âš ï¸ Error fetching {kw}: {e}")
    df_all = pd.concat(dfs, ignore_index=True)
    df_sel = df_all[df_all["state"].isin(all_regions)]

    summary = (
        df_sel.groupby(["state"])["value"]
        .sum()
        .reindex(all_regions)
        .fillna(0)
        .astype(int)
        .reset_index()
    )
    outbreak_sum = summary[summary.state.isin(outbreak)]["value"].sum()
    control_sum = summary[summary.state.isin(control)]["value"].sum()
    total = outbreak_sum + control_sum
    outbreak_prop = outbreak_sum / total if total > 0 else np.nan
    control_prop = control_sum / total if total > 0 else np.nan

    print(f"Outbreak proportion: {outbreak_prop:.2%} | Control proportion: {control_prop:.2%}")
    summary["group"] = summary["state"].apply(
        lambda x: "Outbreak" if x in outbreak else "Control"
    )

    return {
        "disease": disease,
        "timeframe": timeframe,
        "summary": summary,
        "outbreak_prop": outbreak_prop,
        "control_prop": control_prop
    }

# %%
# --- Run analyses ---
results = [analyze_disease(d) for d in recognition_dates.keys()]

# %%
# --- Plot proportions ---
fig, ax = plt.subplots(figsize=(6, 4))
sns.barplot(
    x=[r["disease"].title() for r in results],
    y=[r["outbreak_prop"] for r in results],
    color="tomato",
    label="Outbreak proportion",
)
sns.barplot(
    x=[r["disease"].title() for r in results],
    y=[r["control_prop"] for r in results],
    color="lightgray",
    label="Control proportion",
)
ax.set_ylabel("Proportion of symptom searches")
ax.legend()
ax.set_title("Share of Symptom Searches in Outbreak vs Control Regions\n(4 weeks pre-recognition)")
plt.show()

# %%
# --- Per-state breakdown tables ---
for r in results:
    print("\nðŸ§¾", r["disease"].title(), "-", r["timeframe"])
    display(r["summary"])
